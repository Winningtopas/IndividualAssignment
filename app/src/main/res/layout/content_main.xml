        app:layout_constraintStart_toEndOf="@+id/ivStar1g"
        app:layout_constraintTop_toBottomOf="@+id/tvHistoryDate" />

    <ImageView
        android:id="@+id/ivStar3g"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
